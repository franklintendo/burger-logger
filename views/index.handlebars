<p>Index content goes here</p>

{{#each burgers}}
    {{#if devoured}}
        <p>DEVOURED: {{this.burger_name}}</p>
    {{else}}
        <p class="burger-text">{{this.burger_name}} <button class="devour-btn" data-id="{{this.id}}">Devour!</button></p>
    {{/if}}
  {{/each}}

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="name">Burger Name:</label>
    <input type="text" id="burger-name" name="name">
  </div>

  <button id="submit-btn" type="submit">Add Burger</button>
</form>


